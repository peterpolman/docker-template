{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% if breadcrumb %}
  <ul class="breadcrumbs">
    {% for item in breadcrumb %}
      <li {{ item.attributes }}>
        {% if item.url %}
          {{ item.text }}
          <span>â–¶</span>
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}
